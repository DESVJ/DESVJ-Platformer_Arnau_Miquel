<!-- Config file for the game -->

<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="3"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
    <maps>
	<map id="1" source="map_1_final.tmx"/>
	<map id="2" source="map_2_final.tmx"/>
    </maps>
  </map>


  <player>
    
    <!--Everything reletad to player movement-->    
    <movement gravity="1" />
    <load_file>textures/player.tmx</load_file>
    <difference_y value="256"/>
    <inputs_out value="0"/>
    <actual_state value="1"/>
    <gravity value="1"/>
    <maximum_speed value="8"/>
    <player_info flip="false" not_jumping="false" stop_jumping_up="true" spacebar_pushed="false" god_mode="false" tang_mode="false" alive="true" respawn="false" climbing="false" col_state="0" actual_state="1">
	<position x="104" y="816" w="16" h="-20" />
	<speed x="0" y="1" />
    </player_info>
    <texture_source>textures/Player_SpriteSheet.png</texture_source>


  </player>
  
  
  
</config>